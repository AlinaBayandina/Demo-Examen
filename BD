/****** Object:  View [dbo].[OrderDetails]    Script Date: 20.11.2025 23:23:05 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

-- Создание представления для просмотра заявок с информацией о партнере
CREATE VIEW [dbo].[OrderDetails] AS
SELECT 
    o.OrderID,
    o.OrderDate,
    o.Status,
    o.PrepaymentReceived,
    p.PartnerID,
    p.PartnerName,
    p.Director,
    p.Email,
    p.Phone
FROM Orders o
INNER JOIN Partners p ON o.PartnerID = p.PartnerID;
GO
