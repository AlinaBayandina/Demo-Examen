/****** Object:  View [dbo].[OrderItemDetails]    Script Date: 20.11.2025 23:23:05 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

-- Создание представления для просмотра позиций в заявках
CREATE VIEW [dbo].[OrderItemDetails] AS
SELECT 
    oi.OrderItemID,
    oi.OrderID,
    oi.Quantity,
    oi.UnitPrice,
    oi.ProductionDate,
    p.ProductID,
    p.ProductName,
    p.Article,
    pt.TypeName AS ProductType
FROM OrderItems oi
INNER JOIN Products p ON oi.ProductID = p.ProductID
INNER JOIN ProductTypes pt ON p.ProductTypeID = pt.ProductTypeID;
GO
