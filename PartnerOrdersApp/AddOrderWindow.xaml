<Window x:Class="PartnerOrdersApp.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление заявки" Height="500" Width="600"
        Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Новая заявка" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"
                      FontFamily="Bahnschrift Light SemiCondensed"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,0,0,0">
            <Label Content="Выберите партнера:"/>
            <ComboBox x:Name="partnersComboBox" DisplayMemberPath="PartnerName" Height="25" Margin="0,0,0,15"
                     BorderBrush="#0C4882" BorderThickness="1" Background="White"/>

            <Label Content="Продукция:" Margin="0,10,0,0"/>
            <Border BorderBrush="#0C4882" BorderThickness="1" Background="White" Margin="0,5,0,10">
                <DataGrid x:Name="productsDataGrid" Height="200" AutoGenerateColumns="False"
                         SelectionUnit="Cell" SelectionMode="Single"
                         Background="White" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Выбрать" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Наименование" Binding="{Binding ProductName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" IsReadOnly="True" Width="100"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding MinPartnerPrice, StringFormat={}{0:N2} р}" IsReadOnly="True" Width="80"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Background="#BBDCFA" CornerRadius="3" Padding="10" Margin="0,5,0,0">
                <TextBlock x:Name="totalAmountText" FontSize="14" FontWeight="Bold" 
                          Text="Общая стоимость: 0.00 р"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#0C4882" Foreground="White" 
                    Width="100" Height="30" Margin="0,0,10,0" 
                    FontFamily="Bahnschrift Light SemiCondensed"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Height="30" 
                    Background="#0C4882" Foreground="White"
                    FontFamily="Bahnschrift Light SemiCondensed"/>
        </StackPanel>
    </Grid>
</Window>