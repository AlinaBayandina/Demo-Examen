<Window x:Class="PartnerOrdersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет заявок партнеров" Height="450" Width="800"
        Loaded="Window_Loaded"
        Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Background="White">
        <ListBox x:Name="ordersList" Margin="10,90,10,10" Background="#BBDCFA" BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="#0C4882" Width="730" Height="120" Background="White" Margin="2">
                        <Grid Width="725" Height="110">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="10,5,0,0">
                                <TextBlock FontSize="16" Text="{Binding Partners.PartnerName}"/>
                                <TextBlock FontSize="16" Text="{Binding Partners.PartnerTypes.PartnerTypeName, StringFormat=' | {0}'}" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="10,5,0,0" FontSize="12" 
                                       Text="{Binding Partners.LegalAddress}"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="10,5,0,0" FontSize="12" 
                                       Text="{Binding Partners.Phone}"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="10,5,0,0" FontSize="12" 
                                       Text="{Binding Partners.Rating, StringFormat='Рейтинг: {0}'}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.RowSpan="3" Margin="0,5,10,0" 
                                       FontSize="14" HorizontalAlignment="Right"
                                       Text="{Binding OrderTotal, StringFormat='Стоимость: {0} р'}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="Список заявок партнеров" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="22" Margin="0,10,0,0" Background="White" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Image HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Source="/logo.png"/>

        <!-- Кнопка Добавить заявку -->
        <Button x:Name="btnAdd" Content="Добавить заявку" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,10,0" Width="150" Height="30"
                Background="#0C4882" Foreground="White"
                FontFamily="Bahnschrift Light SemiCondensed" FontSize="12" Click="btnAdd_Click"/>

        <!-- Кнопка Добавить партнера -->
        <Button x:Name="btnAddPartner" Content="Добавить партнера" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,170,0" Width="150" Height="30"
                Background="#0C4882" Foreground="White"
                FontFamily="Bahnschrift Light SemiCondensed" FontSize="12" Click="btnAddPartner_Click"/>

        <!-- Кнопка Метод -->
        <Button x:Name="btnMethod" Content="Расчет материалов" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,50,0,0" Width="150" Height="30"
                Background="#0C4882" Foreground="White"
                FontFamily="Bahnschrift Light SemiCondensed" FontSize="12" Click="btnMethod_Click"/>

    </Grid>
</Window>