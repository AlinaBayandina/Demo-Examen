<Window x:Class="PartnerOrdersApp.PartnerProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет необходимых материалов" Height="500" Width="600"
        Background="White"
        WindowStartupLocation="CenterOwner"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Расчет необходимых материалов" 
                      FontSize="16" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Параметры расчета -->
        <StackPanel Grid.Row="1">
            <!-- Тип продукции -->
            <Label Content="Тип продукции *" FontWeight="Bold"/>
            <ComboBox x:Name="comboProductType" DisplayMemberPath="TypeName" 
                     Height="30" Margin="0,0,0,15"
                     BorderBrush="#0C4882" BorderThickness="1" Background="White"/>

            <!-- Тип материала -->
            <Label Content="Тип материала *" FontWeight="Bold"/>
            <ComboBox x:Name="comboMaterialType" DisplayMemberPath="MaterialTypeName" 
                     Height="30" Margin="0,0,0,15"
                     BorderBrush="#0C4882" BorderThickness="1" Background="White"/>

            <!-- Параметры продукции -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Параметр 1 *" FontWeight="Bold"/>
                    <TextBox x:Name="txtParameter1" Height="30"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите первый параметр продукции (положительное число)"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Параметр 2 *" FontWeight="Bold"/>
                    <TextBox x:Name="txtParameter2" Height="30"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите второй параметр продукции (положительное число)"/>
                </StackPanel>
            </Grid>

            <!-- Количества -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Требуемое количество продукции *" FontWeight="Bold"/>
                    <TextBox x:Name="txtRequiredQuantity" Height="30"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите требуемое количество продукции (целое число)"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Количество на складе *" FontWeight="Bold"/>
                    <TextBox x:Name="txtStockQuantity" Height="30"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите количество продукции на складе (целое число)"/>
                </StackPanel>
            </Grid>

            <!-- Результат -->
            <Border Background="#BBDCFA" BorderBrush="#0C4882" BorderThickness="1" 
                    CornerRadius="3" Padding="15" Margin="0,20,0,0">
                <TextBlock x:Name="txtResult" FontSize="12" FontWeight="Bold" 
                          Foreground="#0C4882" TextWrapping="Wrap"
                          Text="Результат расчета отобразится здесь..."/>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Рассчитать" Click="CalculateButton_Click" 
                    Background="#0C4882" Foreground="White" 
                    Width="120" Height="35" Margin="0,0,15,0" 
                    FontWeight="Bold"
                    ToolTip="Выполнить расчет необходимого количества материалов"/>

            <Button Content="Закрыть" Click="CloseButton_Click" 
                    Background="#0C4882" Foreground="White" 
                    Width="80" Height="35"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>