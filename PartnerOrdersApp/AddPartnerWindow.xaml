<Window x:Class="PartnerOrdersApp.AddPartnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление партнера" Height="650" Width="700"
        Background="White"
        WindowStartupLocation="CenterOwner"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Добавление нового партнера" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Основные поля формы -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0">
                    <!-- Тип партнера -->
                    <Label Content="Тип партнера *" FontWeight="Bold"/>
                    <ComboBox x:Name="typeComboBox" DisplayMemberPath="PartnerTypeName" 
                             Height="30" Margin="0,0,0,15"
                             BorderBrush="#0C4882" BorderThickness="1" Background="White"
                             ToolTip="Выберите тип партнера из списка"/>

                    <!-- Наименование компании -->
                    <Label Content="Наименование компании *" FontWeight="Bold"/>
                    <TextBox x:Name="nameTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите полное наименование компании"/>

                    <!-- ФИО директора -->
                    <Label Content="ФИО директора" FontWeight="Bold"/>
                    <TextBox x:Name="directorTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите ФИО директора в формате: Иванов Иван Иванович"/>

                    <!-- ИНН -->
                    <Label Content="ИНН *" FontWeight="Bold"/>
                    <TextBox x:Name="innTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите ИНН (10 цифр)" MaxLength="10"
                            PreviewTextInput="InnTextBox_PreviewTextInput"/>
                </StackPanel>

                <!-- Правая колонка -->
                <StackPanel Grid.Column="2">
                    <!-- Рейтинг -->
                    <Label Content="Рейтинг *" FontWeight="Bold"/>
                    <TextBox x:Name="ratingTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите рейтинг от 0 до 10"
                            PreviewTextInput="RatingTextBox_PreviewTextInput"/>

                    <!-- Email -->
                    <Label Content="Email" FontWeight="Bold"/>
                    <TextBox x:Name="emailTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите email адрес в формате: example@mail.ru"/>

                    <!-- Телефон -->
                    <Label Content="Телефон" FontWeight="Bold"/>
                    <TextBox x:Name="phoneTextBox" Height="30" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            ToolTip="Введите номер телефона в формате: +7 (XXX) XXX-XX-XX"/>

                    <!-- Юридический адрес -->
                    <Label Content="Юридический адрес" FontWeight="Bold"/>
                    <TextBox x:Name="addressTextBox" Height="60" Margin="0,0,0,15"
                            BorderBrush="#0C4882" BorderThickness="1" Background="White"
                            TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                            ToolTip="Введите полный юридический адрес"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Подвал с кнопками -->
        <Border Grid.Row="2" Background="#BBDCFA" BorderBrush="#0C4882" BorderThickness="1,0,0,0" 
                Padding="15" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center"
                          Text="* - обязательные поля" 
                          FontSize="10" 
                          Foreground="#666666" FontStyle="Italic"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Сохранить" Click="SaveButton_Click" 
                            Background="#0C4882" Foreground="White" 
                            Width="120" Height="35" Margin="0,0,10,0" 
                            FontWeight="Bold"
                            ToolTip="Сохранить данные партнера"/>

                    <Button Content="Отмена" Click="CancelButton_Click" 
                            Background="#0C4882" Foreground="White" 
                            Width="120" Height="35"
                            FontWeight="Bold"
                            ToolTip="Закрыть форму без сохранения"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>